{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "reactNamespace": "RX",
    "noResolve": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "outDir": "dist",
    "jsx": "react"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}